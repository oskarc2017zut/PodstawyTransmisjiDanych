<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:LabXTemplate"
        xmlns:ControlzEx="clr-namespace:ControlzEx;assembly=MahApps.Metro"
        xmlns:oxy="http://oxyplot.org/wpf"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        x:Class="LabXTemplate.MainWindow"
        xmlns:pt="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        mc:Ignorable="d"
    ResizeMode="CanResizeWithGrip"
    Icon="../world-wide-internet-signal.ico"
    
    
    
        Title="Podstawy transmisji danych 2017 Lab X" Height="400" Width="625" ShowMaxRestoreButton="True" IsManipulationEnabled="True" TitleCharacterCasing="Normal"
                      ShowIconOnTitleBar="True" WindowState="Maximized" >
    <TabControl>
        <TabItem Header="Home">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0"  Grid.Row="0" Background="#FF393939">
                        <StackPanel Background="#FF1E1E1E">
                            <Button Content="Start" Margin="5" BorderBrush="{x:Null}" Controls:ControlsHelper.ContentCharacterCasing="Normal" ClickMode="Hover" Click="Button_Click"/>
                        </StackPanel>
                    </ScrollViewer>

                    <TabControl Grid.Column="1" Grid.ColumnSpan="1">
                        <TabItem Header="Chart#1">
                            <TabControl>
                                <TabItem Header="Chart">
                                    <oxy:Plot LegendBackground="Chartreuse" PlotAreaBorderColor="#FF1985BE" TextColor="#FF1D7CBC" Background="#FF252525" SelectionColor="#FF252526">
                                        <oxy:Plot.Axes>
                                            <oxy:LinearAxis Title="X" StringFormat="g" Position="Bottom"/>
                                            <oxy:LinearAxis Title="Y" Position="Left"/>
                                        </oxy:Plot.Axes>
                                        <oxy:Plot.Series>
                                            <oxy:LineSeries ItemsSource="{Binding Data}" Color="White"/>
                                        </oxy:Plot.Series>
                                    </oxy:Plot>
                                </TabItem>
                                <TabItem Header="Data">
                                    <pt:DataGrid Margin="0 8 0 0" ItemsSource="{Binding Data}" CanInsert="False" CanDelete="False"/>
                                </TabItem>
                            </TabControl>
                        </TabItem>
                         <TabItem Header="Chart#2">
                            <TabControl>
                                <TabItem Header="Chart"></TabItem>
                                <TabItem Header="Data"></TabItem>
                            </TabControl>
                        </TabItem>
                         <TabItem Header="Chart#3">
                            <TabControl>
                                <TabItem Header="Chart"></TabItem>
                                <TabItem Header="Data"></TabItem>
                            </TabControl>
                        </TabItem>
                         <TabItem Header="Chart#4">
                            <TabControl>
                                <TabItem Header="Chart"></TabItem>
                                <TabItem Header="Data"></TabItem>
                            </TabControl>
                        </TabItem>
                        
                    </TabControl>



                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel>
                        <TextBox />
                        <Controls:MetroProgressBar Value="100" Height="10"></Controls:MetroProgressBar>

                    </StackPanel>
                </Grid>
                <Label Content="© Oskar Cieślikiewicz 2017" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="508,-42,0,0" HorizontalContentAlignment="Right" Opacity="0.2"/>
            </Grid>
        </TabItem>

        <TabItem Header="Logs">
            
        </TabItem>

        <TabItem Header="Settings">

        </TabItem>
    </TabControl>

</Controls:MetroWindow>

